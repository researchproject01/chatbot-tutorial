{
	"parser": "babel-eslint",
	"extends": [
		"plugin:flowtype/recommended",
		"airbnb",
		"prettier",
		"prettier/react"
	],
	"plugins": [
		"flowtype",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jest": true
	},
	"rules": {
		"strict": 0,
		"jsx-quotes": 1,
        "comma-dangle": ["warn", "always-multiline"],
        "indent": ["warn", "tab", {"SwitchCase": 1}],
        "sort-keys": ["warn", "asc", {"caseSensitive": false, "natural": true}],
		"key-spacing": 0,
		"comma-spacing": 0,
		"no-multi-spaces": 0,
		"brace-style": 0,
		"camelcase": 1,
		"consistent-this": [1, "self"],
		"eol-last": 1,
		"func-names": 0,
		"func-style": 0,
		"new-cap": 0,
		"new-parens": 1,
		"no-nested-ternary": 0,
		"no-array-constructor": 1,
		"no-lonely-if": 0,
		"no-new-object": 1,
		"no-spaced-func": 1,
		"semi-spacing": 1,
		"no-ternary": 0,
		"no-trailing-spaces": 1,
		"no-underscore-dangle": 0,
		"no-mixed-spaces-and-tabs": 1,
		"quotes": ["warn", "single", {"allowTemplateLiterals": true}],
		"quote-props": 0,
	   	"semi": ["warn", "never"],
		"sort-vars": 0,
		"keyword-spacing": 1,
		"space-in-brackets": 0,
		"space-in-parens": 0,
		"space-infix-ops": 1,
		"max-nested-callbacks": 0,
		"one-var": 0,
		"wrap-regex": 0,
		"max-depth": 0,
		"max-len": 0,
		"max-params": 0,
		"max-statements": 0,
		"no-bitwise": 0,
		"no-plusplus": 0
	}
}
